# Database
DATABASE_URL=postgresql://user:password@host:port/dbname

# Better Auth
BETTER_AUTH_SECRET=your_secret_here  # Generate with: openssl rand -base64 32
APP_URL=https://your-app.up.railway.app  # Required for production trusted origins

# OpenRouter API Key (server-side only - NEVER expose to client)
OPENROUTER_API_KEY=your_api_key

# S3 Storage (Railway Bucket)
S3_ACCESS_KEY_ID=your_access_key
S3_BUCKET=your-bucket-name
S3_ENDPOINT=https://your-bucket.s3.region.amazonaws.com
S3_REGION=us-east-1
S3_SECRET_ACCESS_KEY=your_secret_key
